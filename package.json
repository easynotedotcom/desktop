{
  "name": "easynote-app",
  "version": "1.1.2",
  "description": "",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/easynotedotcom/desktop.git"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder build --win --publish never",
    "deploy": "electron-builder build --win --publish always"
  },
  "build": {
    "productName": "Easynote",
    "target": "NSIS",
    "win": {
      "target": "nsis",
      "icon": "assets/icons/win/icon2.ico"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "installerIcon": "assets/icons/win/icon2.ico",
      "installerHeaderIcon": "assets/icons/win/icon2.ico",
      "deleteAppDataOnUninstall": true
    }
  },
  "author": "Easynote",
  "license": "ISC",
  "devDependencies": {
    "electron": "^11.0.3",
    "electron-builder": "^20.44.2"
  },
  "dependencies": {
    "@trodi/electron-splashscreen": "^1.0.0",
    "electron-updater": "^4.3.5"
  }
}
