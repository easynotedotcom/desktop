{
  "name": "easynote-app",
  "version": "1.2.7",
  "description": "",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/easynotedotcom/desktop.git"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder build --mac --win --publish never",
    "deploy": "electron-builder build --mac --win --publish always"
  },
  "build": {
    "productName": "Easynote",
    "dmg": {
      "sign": false
    },
    "afterSign": "./assets/js/notarize.js",
    "win": {
      "legalTrademarks": "(c) 2020 easynote.com",
      "publisherName": "Easynote AB",
      "target": "nsis",
      "icon": "./assets/icons/png/Group 1849.png"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "./assets/icons/mac/icon.icns",
      "category":"public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "./entitlements.mac.plist",
      "entitlementsInherit": "./entitlements.mac.plist"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "installerIcon": "./assets/icons/win/icon4.ico",
      "installerHeaderIcon": "./assets/icons/win/icon4.ico",
      "uninstallerIcon": "./assets/icons/win/icon4.ico",
      "deleteAppDataOnUninstall": true
    }
  },
  "author":{
    "name": "Easynote",
    "email": "support@easynote.com",
    "url": "https://app.easynote.com/"
  } ,
  "license": "ISC",
  "devDependencies": {
    "electron": "^11.0.3",
    "electron-builder": "^20.44.2"
  },
  "dependencies": {
    "@trodi/electron-splashscreen": "^1.0.0",
    "electron-updater": "^4.3.5"
  }
}
